<div class="box-body">
  <div class="type-box">
    <div class="type-config">
      <h5 align="center" >New Post</h5>

      <div class="avatar-config">
      <%= form_for @post, html: { multipart: true} do |form| %>
      <%= form.label :img %> | <%= form.file_field :img %>
      </div>

      <div class="text-config">

        <div class="text-center">
        <h5><%= form.label :post_text %></h5>
        </div>
        <%= form.text_area :post_text, size: "80x10" %><br>
        <div class="text-center">
        <button type="submit" class="btn-color-config btn btn-primary" align="center" name="commit" value="save">Submit</button>
        </div>
        <% end %>
        </div>

        <div class="text-center">
          <%= link_to "Back", "/home"%>
        </div>

    </div>

  </div>
